{
  "follow": true,
  "keymap": {
    "bigger": ["+", "="],
    "clear": ["c"],
    "collapse": ["<s-tab>", "`"],
    "copy": ["p"],
    "copy_name": ["y"],
    "cut": ["x"],
    "delete": ["d"],
    "filter": ["f"],
    "new": ["a"],
    "open_sys": ["o"],
    "primary": ["<enter>"],
    "quit": ["q"],
    "refresh": ["<c-r>"],
    "rename": ["r", "R"],
    "secondary": ["<tab>", "<2-leftmouse>"],
    "select": ["s"],
    "smaller": ["-", "_"],
    "toggle_follow": ["F"],
    "toggle_hidden": ["."]
  },
  "open_left": true,
  "session": true,
  "show_hidden": false,
  "update_time": {
    "max": 2,
    "min": 1
  },
  "use_icons": true,
  "version_control": {
    "defer": false
  },
  "width": 40
}
